{
  "name": "@newhighsco/stylelint-config",
  "description": "New High Score shareable config for stylelint",
  "version": "2.0.38",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/stylelint-config.git"
  },
  "homepage": "https://github.com/newhighsco/stylelint-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/stylelint-config/issues"
  },
  "main": "stylelint.config.js",
  "files": [],
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix",
    "format:css": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-prettier": "1.2.0",
    "stylelint-scss": "3.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.3",
    "@newhighsco/commitlint-config": "1.0.11",
    "@newhighsco/editor-config": "1.1.1",
    "@newhighsco/eslint-config": "2.2.87",
    "@newhighsco/prettier-config": "2.0.9",
    "@newhighsco/release-config": "1.0.60",
    "eslint": "7.26.0",
    "husky": "6.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "semantic-release": "17.4.3",
    "stylelint": "13.13.1"
  },
  "peerDependencies": {
    "prettier": "2.3.0",
    "stylelint": "13.13.1"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "packageRules": [
      {
        "extends": [
          "packages:stylelint"
        ],
        "packageNames": [
          "prettier"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
