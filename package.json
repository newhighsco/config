{
  "name": "@newhighsco/stylelint-config",
  "description": "New High Score shareable config for stylelint",
  "version": "2.0.8",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/stylelint-config.git"
  },
  "homepage": "https://github.com/newhighsco/stylelint-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/stylelint-config/issues"
  },
  "main": "stylelint.config.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix",
    "format:css": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-standard": "20.0.0",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@newhighsco/commitlint-config": "1.0.0",
    "@newhighsco/editor-config": "1.1.0",
    "@newhighsco/eslint-config": "2.0.8",
    "@newhighsco/prettier-config": "2.0.1",
    "@newhighsco/release-config": "1.0.19",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "semantic-release": "17.0.4",
    "stylelint": "13.3.2"
  },
  "peerDependencies": {
    "prettier": "2.0.4",
    "stylelint": "13.3.2"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ]
  }
}
