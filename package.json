{
  "extends": ["local>newhighsco/.github:renovate-config"],
  "packageRules": [
    {
      "extends": ["monorepo:commitlint"],
      "semanticCommitType": "fix"
    },
    {
      "extends": ["monorepo:semantic-release"],
      "semanticCommitType": "fix"
    },
    {
      "extends": ["packages:eslint"],
      "semanticCommitType": "fix"
    },
    {
      "extends": ["packages:stylelint"],
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": ["prettier"],
      "semanticCommitType": "fix"
    },
    {
      "description": "Pin `eslint-config-love` to v44 as update requires ESLint v9",
      "matchPackageNames": ["eslint-config-love"],
      "allowedVersions": "<45"
    },
    {
      "description": "Pin `@typescript-eslint/*` to v7.18 as update requires ESLint v9",
      "matchPackageNames": ["/^@typescript-eslint/"],
      "allowedVersions": "<8"
    }
  ]
}
