{
  "name": "@newhighsco/config",
  "description": "New High Score shareable configs",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/config.git"
  },
  "homepage": "https://github.com/newhighsco/config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/config/issues"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "pretest": "yarn lint",
    "test": "yarn workspaces run test",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore --ext .js,.jsx,.json .",
    "lint:css": "stylelint '**/*.{css,scss}' --ignore-path .gitignore",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js -- --fix",
    "format:css": "yarn lint:css -- --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@newhighsco/commitlint-config": "*",
    "@newhighsco/editor-config": "*",
    "@newhighsco/eslint-config": "*",
    "@newhighsco/prettier-config": "*",
    "@newhighsco/release-config": "*",
    "@newhighsco/stylelint-config": "*",
    "@qiwi/multi-semantic-release": "6.1.1",
    "eslint": "8.14.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "stylelint": "14.8.1",
    "typescript": "4.6.4"
  },
  "resolutions": {
    "@typescript-eslint/parser": "5.21.0"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "packageRules": [
      {
        "extends": [
          "monorepo:commitlint"
        ],
        "semanticCommitType": "fix"
      },
      {
        "extends": [
          "monorepo:semantic-release"
        ],
        "semanticCommitType": "fix"
      },
      {
        "extends": [
          "packages:eslint"
        ],
        "semanticCommitType": "fix"
      },
      {
        "extends": [
          "packages:stylelint"
        ],
        "semanticCommitType": "fix"
      },
      {
        "packageNames": [
          "prettier"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
