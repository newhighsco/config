{
  "name": "@newhighsco/postcss-config",
  "description": "New High Score shareable config for PostCSS",
  "version": "3.4.18",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/postcss-config.git"
  },
  "homepage": "https://github.com/newhighsco/postcss-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/postcss-config/issues"
  },
  "main": "index.js",
  "files": [
    "purgecss.js"
  ],
  "scripts": {
    "test": "yarn lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore --ext .js,.jsx,.json .",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js -- --fix"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.3",
    "autoprefixer": "10.4.0",
    "caniuse-lite": "1.0.30001279",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "6.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@newhighsco/commitlint-config": "1.0.17",
    "@newhighsco/editor-config": "1.1.2",
    "@newhighsco/eslint-config": "2.3.42",
    "@newhighsco/prettier-config": "2.0.14",
    "@newhighsco/release-config": "1.0.76",
    "eslint": "8.2.0",
    "husky": "7.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "semantic-release": "18.0.0"
  },
  "peerDependencies": {
    "postcss": "8.3.11"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ]
  }
}
