{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Pin `@typescript-eslint/*` to v7.18 as update requires ESLint v9",
      "matchPackageNames": ["/^@typescript-eslint/"],
      "allowedVersions": "<8"
    },
    {
      "description": "Pin `eslint-config-love` to v44 as update requires ESLint v9",
      "matchPackageNames": ["eslint-config-love"],
      "allowedVersions": "<45"
    },
    {
      "description": "Pin `eslint-plugin-cypress` to v3 as update requires ESLint v9",
      "matchPackageNames": ["eslint-plugin-cypress"],
      "allowedVersions": "<4"
    },
    {
      "description": "Pin `eslint-plugin-n` to v17.15 - see https://github.com/eslint-community/eslint-plugin-n/issues/415",
      "matchPackageNames": ["eslint-plugin-n"],
      "allowedVersions": "<17.16"
    }
  ]
}
