{
  "name": "@newhighsco/commitlint-config",
  "description": "New High Score shareable config for commitlint",
  "version": "1.0.7",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/commitlint-config.git"
  },
  "homepage": "https://github.com/newhighsco/commitlint-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/commitlint-config/issues"
  },
  "main": "commitlint.config.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@newhighsco/editor-config": "1.1.1",
    "@newhighsco/eslint-config": "2.2.34",
    "@newhighsco/prettier-config": "2.0.6",
    "@newhighsco/release-config": "1.0.31",
    "eslint": "7.11.0",
    "husky": "4.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "semantic-release": "17.1.2"
  },
  "peerDependencies": {
    "@commitlint/cli": "11.0.0"
  },
  "commitlint": {
    "extends": [
      "."
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "packageRules": [
      {
        "extends": [
          "monorepo:commitlint"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
